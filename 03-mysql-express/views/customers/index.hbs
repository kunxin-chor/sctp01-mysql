{{#extends "base"}}

    {{#block "content"}}
        <table class="table">
            <thead>
                <tr>
                    <td>First Name</td>
                    <td>Last Name</td>
                    <td>Rating</td>
                    <td>Company ID</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                {{#each customers}}
                <tr>
                    <td>{{this.Customers.first_name}}</td>
                    <td>{{this.Customers.last_name}}</td>
                    <td>{{this.Customers.rating}}</td>
                    <td>{{this.Companies.name}}</td>
                    <td>
                        <a href="/customers/{{this.customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                        <a href="/customers/{{this.customer_id}}/update" class="btn btn-success btn-sm">Update</a> 
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    {{/block}}

{{/extends}}